{
  "manifest_version": 3,
  "name": "Alarm Extension",
  "version": "1.0",
  "description": "Set an alarm and receive a notification when the time has elapsed.",
  "permissions": ["alarms", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "browser_style": true
  }
}
